<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/colorControlHighlight"> <!-- Колір ріпла при натисканні -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#333333" /> <!-- Основний колір фону -->
            <corners android:radius="4dp" /> <!-- Закруглення кутів -->
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- Обводка -->
        </shape>
    </item>
</ripple>
