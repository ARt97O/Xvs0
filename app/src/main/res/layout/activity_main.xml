<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <Button
        android:id="@+id/but1"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:onClick="onButtonClick"
        android:textSize="40sp"
        android:tag="1"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.561" />

    <Button
        android:id="@+id/but2"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:onClick="onButtonClick"
        android:textSize="40sp"
        android:tag="2"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_background"
        app:layout_constraintEnd_toEndOf="@id/but1"
        app:layout_constraintStart_toStartOf="@id/but1"
        app:layout_constraintTop_toBottomOf="@id/but1"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/but3"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:onClick="onButtonClick"
        android:textSize="40sp"
        android:tag="3"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_background"
        app:layout_constraintEnd_toEndOf="@id/but2"
        app:layout_constraintStart_toStartOf="@id/but2"
        app:layout_constraintTop_toBottomOf="@id/but2"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/but4"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:onClick="onButtonClick"
        android:textSize="40sp"
        android:tag="4"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_background"
        app:layout_constraintBottom_toBottomOf="@id/but1"
        app:layout_constraintStart_toEndOf="@id/but1"
        app:layout_constraintTop_toTopOf="@id/but1"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/but5"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:onClick="onButtonClick"
        android:textSize="40sp"
        android:tag="5"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_background"
        app:layout_constraintEnd_toEndOf="@id/but4"
        app:layout_constraintStart_toStartOf="@id/but4"
        app:layout_constraintTop_toBottomOf="@id/but4"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/but6"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:onClick="onButtonClick"
        android:textSize="40sp"
        android:tag="6"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_background"
        app:layout_constraintEnd_toEndOf="@id/but5"
        app:layout_constraintStart_toStartOf="@id/but5"
        app:layout_constraintTop_toBottomOf="@id/but5"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/but7"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:onClick="onButtonClick"
        android:textSize="40sp"
        android:tag="7"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_background"
        app:layout_constraintBottom_toBottomOf="@id/but4"
        app:layout_constraintStart_toEndOf="@id/but4"
        app:layout_constraintTop_toTopOf="@id/but4"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/but8"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:onClick="onButtonClick"
        android:textSize="40sp"
        android:tag="8"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_background"
        app:layout_constraintEnd_toEndOf="@id/but7"
        app:layout_constraintStart_toStartOf="@id/but7"
        app:layout_constraintTop_toBottomOf="@id/but7"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/but9"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:onClick="onButtonClick"
        android:textSize="40sp"
        android:tag="9"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_custom_background"
        app:layout_constraintEnd_toEndOf="@id/but8"
        app:layout_constraintStart_toStartOf="@id/but8"
        app:layout_constraintTop_toBottomOf="@id/but8"
        android:layout_marginTop="16dp" />
    <TextView
        android:id="@+id/textEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/but4"
        app:layout_constraintEnd_toEndOf="@+id/but4"
        app:layout_constraintStart_toStartOf="@+id/but4" />

    <Button
        android:id="@+id/chackWinX"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginBottom="160dp"
        android:text="0"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="#444444"
        app:layout_constraintBottom_toTopOf="@+id/but1"
        app:layout_constraintEnd_toEndOf="@+id/but1"
        app:layout_constraintStart_toStartOf="@+id/but1" />

    <Button
        android:id="@+id/chackWinO"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:text="0"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="#444444"
        app:layout_constraintBottom_toBottomOf="@+id/chackWinX"
        app:layout_constraintEnd_toEndOf="@+id/but7"
        app:layout_constraintStart_toStartOf="@+id/but7"
        app:layout_constraintTop_toTopOf="@+id/chackWinX"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textWinX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/chackWinX"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/chackWinX"
        app:layout_constraintEnd_toEndOf="@+id/chackWinX"
        app:layout_constraintStart_toStartOf="@+id/chackWinX" />

    <TextView
        android:id="@+id/textWinO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/chackWinO"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/chackWinO"
        app:layout_constraintEnd_toEndOf="@+id/chackWinO"
        app:layout_constraintStart_toStartOf="@+id/chackWinO" />

    <ImageButton
        android:id="@+id/butOpenSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_manage"
        app:layout_constraintBottom_toTopOf="@+id/textWinO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.826"
        app:layout_constraintStart_toStartOf="@+id/textWinO"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />


</androidx.constraintlayout.widget.ConstraintLayout>