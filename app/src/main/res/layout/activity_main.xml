    android:background="#000000">


    <Button
        android:id="@+id/but1"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/button_custom_background"
        android:onClick="onButtonClick"
        android:tag="1"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline7" />

    <Button
        android:id="@+id/but2"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/button_custom_background"
        android:onClick="onButtonClick"
        android:tag="2"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toEndOf="@+id/but1"
        app:layout_constraintStart_toStartOf="@+id/but1"
        app:layout_constraintTop_toTopOf="@+id/guideline6" />

    <Button
        android:id="@+id/but3"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/button_custom_background"
        android:onClick="onButtonClick"
        android:tag="3"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintEnd_toEndOf="@+id/but2"
        app:layout_constraintStart_toStartOf="@+id/but2"
        app:layout_constraintTop_toTopOf="@+id/guideline10" />

    <Button
        android:id="@+id/but4"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/button_custom_background"
        android:onClick="onButtonClick"
        android:tag="4"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/but1"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toEndOf="@+id/but1"
        app:layout_constraintTop_toTopOf="@+id/but1" />

    <Button
        android:id="@+id/but5"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/button_custom_background"
        android:onClick="onButtonClick"
