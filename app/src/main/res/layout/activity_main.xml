        app:layout_constraintTop_toTopOf="@+id/guideline6" />

    <Button
        android:id="@+id/but6"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/button_custom_background"
        android:onClick="onButtonClick"
        android:tag="6"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintEnd_toEndOf="@+id/but5"
        app:layout_constraintStart_toStartOf="@+id/but5"
        app:layout_constraintTop_toTopOf="@+id/guideline10" />

    <Button
        android:id="@+id/but7"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/button_custom_background"
        android:onClick="onButtonClick"
        android:tag="7"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/but4"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/but4" />

    <Button
        android:id="@+id/but8"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/button_custom_background"
        android:onClick="onButtonClick"
        android:tag="8"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toEndOf="@+id/but7"
        app:layout_constraintStart_toStartOf="@+id/but7"
        app:layout_constraintTop_toTopOf="@+id/guideline6" />

    <Button
        android:id="@+id/but9"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/button_custom_background"
        android:onClick="onButtonClick"
        android:tag="9"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintEnd_toEndOf="@+id/but8"
